<div class="title-text">
    <h1 class="text background-text"><slot /></h1>
    <h1
        aria-hidden="true"
        class="text filter-text"
    >
        <slot />
    </h1>
    <h1
        aria-hidden="true"
        class="spacer-text"
    >
        <slot />
    </h1>
</div>
<style>
    h1 {
        font-size: clamp(3rem, 8vw, 8rem);
        line-height: 0.9;
        margin: 0;
    }

    .text {
        position: absolute;
    }

    .background-text {
        color: black;
        transform-origin: center;
        z-index: -2;
    }

    .filter-text {
        mix-blend-mode: saturation;
        scale: 0.996;
        color: #d31757;
        z-index: 1;
    }

    .spacer-text {
        visibility: hidden;
        white-space: nowrap;
    }
</style>
