---
import SimpleMosaiqLogo from './SimpleMosaiqLogo.astro';
---

<nav>
    <a
        href="/"
        class="nav-logo"
    >
        <SimpleMosaiqLogo />
        <h2>Mosaiq Software</h2>
    </a>
    <div id="link-group">
        <a
            href="/about"
            class="button-like"
            >About</a
        >
        <a
            href="/contact"
            class="button-like"
            >Contact</a
        >
        <a
            href="/join"
            class="button-like"
            >Join</a
        >
        <a
            href="/projects"
            class="button-like"
            >Projects
        </a>
    </div>
</nav>

<style>
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-direction: row;
        padding: var(--spacing-sm) var(--spacing-lg);
        position: sticky;
        top: 0;
        z-index: 3;

        @media screen and (max-width: 768px) {
            flex-direction: column;
            gap: var(--spacing-md);
            width: 100%;
            padding: var(--spacing-sm) 0;
            margin: 0;
            margin-bottom: var(--spacing-md);
            background-color: var(--color-background);
        }
    }

    .nav-logo {
        display: flex;
        align-items: center;
        gap: var(--spacing-sm);
        h2 {
            text-wrap: nowrap;
        }
    }

    #link-group {
        display: flex;
        gap: var(--spacing-md);
        border: 1px solid var(--color-text);
        padding: var(--spacing-sm) var(--spacing-md);
        border-radius: var(--border-radius-full);

        @media screen and (max-width: 768px) {
            width: 100%;
            justify-content: center;
            border-radius: 0%;
            border: none;
        }
    }
</style>
