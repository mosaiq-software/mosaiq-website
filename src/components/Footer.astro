---
import SimpleMosaiqLogo from './SimpleMosaiqLogo.astro';

const year = new Date().getFullYear();
---

<footer>
    <div class="column footer-links">
        <h2 class="bkg-text">Organization</h2>
        <a href="/about">About</a>
        <a href="/join">Join</a>
        <br />
        <h2 class="bkg-text">Another footer</h2>
        <a href="https://github.com/mosaiq-software">GitHub</a>
        <a href="https://www.linkedin.com/company/mosaiq-software">LinkedIn</a>
    </div>
    <div class="column">
        <a href="/">
            <SimpleMosaiqLogo />
        </a>
        <a
            href="/"
            style="text-decoration: none;"
        >
            <h2 class="white-text">Mosaiq Software</h2>
        </a>
        <p class="white-text">&copy; {year} Mosaiq Software</p>
    </div>
    <div class="column footer-links">
        <h2 class="bkg-text">Resources</h2>
        <a href="/brand">Brand Assets</a>
        <a href="/projects">Projects</a>
        <br />
        <h2 class="bkg-text">Website Design</h2>
        <a href="https://matthagger.me/">Matt Hagger</a>
        <a href="https://samranda.com">Sam Randa</a>
    </div>
</footer>

<style>
    footer {
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        align-items: flex-start;
        padding: var(--spacing-lg) var(--spacing-lg);
        z-index: 3;
        background-color: var(--mosaiq-pink);
        min-height: 50vh;
        color: var(--color-background);

        @media screen and (max-width: 768px) {
            flex-direction: column;
            align-items: center;
            text-align: center;
            gap: var(--spacing-xl);
        }
    }
    .column {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--spacing-md);
    }
    .white-text {
        color: var(--color-background);
    }
    .bkg-text {
        color: #fb3b7c;
    }
</style>
