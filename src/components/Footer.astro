<style>
    footer {
        width: 100%;
        display: flex;
        justify-content: space-evenly;
        align-items: flex-start;
        padding: var(--spacing-lg) var(--spacing-lg);
        z-index: 3;
        background-color: var(--mosaiq-pink);
        min-height: 50vh;
        color: var(--color-background);
    }
    .column {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--spacing-md);
    }
    .white-text {
        color: var(--color-background);
    }
    .bkg-text {
        color: #fb3b7c;
    }
</style>
