    import { ScrollTrigger } from 'gsap/ScrollTrigger';
    gsap.registerPlugin(ScrollTrigger);
    const navbar = document.getElementById('navbar');
    const heroTitle = document.getElementById('hero-title');
    gsap.fromTo(
        heroTitle,
        {
            y: 0,
            opacity: 1,
        },
        {
            y: -200,
            opacity: 0,
            scrollTrigger: {
                trigger: heroTitle,
                start: 'top 100px',
                end: 'bottom center',
                scrub: 1,
            },
        }
    );
    gsap.fromTo(
        navbar,
        {
            y: -200,
            opacity: 0,
        },
        {
            y: 0,
            opacity: 1,
            scrollTrigger: {
                trigger: heroTitle,
                start: 'top 100px',
                end: 'bottom center',
                scrub: 1,
            },
