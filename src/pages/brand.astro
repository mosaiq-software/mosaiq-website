---
import SectionHeaderTitle from '../components/SectionHeaderTitle.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionLayout from '../layouts/SectionLayout.astro';

const colors = [
    {
        name: 'Blue',
        hex: '#2384CA',
    },
    {
        name: 'Navy',
        hex: '#21286C',
    },
    {
        name: 'Purple',
        hex: '#482362',
    },
    {
        name: 'Magenta',
        hex: '#932E76',
    },
    {
        name: 'Pink',
        hex: '#D31757',
    },
];
---

<BaseLayout title="Mosaiq Software | Brand Assets">
    <SectionLayout id="brand">
        <SectionHeaderTitle>Brand Assets</SectionHeaderTitle>
        <div class="row">
            <div class="column">
                <h2>Colors</h2>
                {
                    colors.map((color) => (
                        <div
                            class="color-swatch"
                            style={`background-color: ${color.hex};`}
                            data-hex={color.hex}
                        >
                            <p>{color.name}</p>
                            <code>{color.hex}</code>
                        </div>
                    ))
                }
            </div>
            <div class="column">
                <h2>Typography</h2>
                <div class="typeface">
                    <h1>Mosaiq Software</h1>
                    <h2>Mosaiq Software</h2>
                    <h3>Mosaiq Software</h3>
                    <h4>Mosaiq Software</h4>
                    <h5>Mosaiq Software</h5>
                    <h6>Mosaiq Software</h6>
                    <p>Mosaiq Software</p>
                    <p class="small">Mosaiq Software</p>
                </div>
            </div>
            <div class="column">
                <h2>Logos</h2>
                <div class="logo">
                    <img
                        src="/assets/MosaiqLogoOutlined.png"
                        alt="Mosaiq Logo Outlined"
                        height="150"
                    />
                </div>
                <div class="logo">
                    <img
                        src="/assets/MosaiqLogoTransparent.png"
                        alt="Mosaiq Logo Transparent"
                        height="150"
                    />
                </div>
                <div class="logo">
                    <img
                        src="/assets/MosaiqLogoBlueTransparent.png"
                        alt="Mosaiq Logo Blue Transparent"
                        height="150"
                    />
                </div>
            </div>
        </div>
    </SectionLayout>
</BaseLayout>
<script>
    const swatches = document.querySelectorAll('.color-swatch');
    swatches.forEach((swatch) => {
        swatch.addEventListener('click', () => {
            const hex = swatch.getAttribute('data-hex');
            navigator.clipboard.writeText(hex ?? 'Color Not Found');
            swatch.classList.add('copied');
            setTimeout(() => {
                swatch.classList.remove('copied');
            }, 1000);
        });
    });

    const logos = document.querySelectorAll('.logo img');
    logos.forEach((logo) => {
        logo.addEventListener('click', () => {
            const src = logo.getAttribute('src');
            if (!src) return;
            window.open(src, '_blank');
        });
    });
</script>
<style>
    .row {
        display: flex;
        flex-direction: row;
        justify-content: center;
        gap: 10rem;
        flex-wrap: wrap;
    }
    .column {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .color-swatch {
        width: 300px;
        height: 100px;
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        padding: 1rem;
        transition: opacity 0.3s ease-in-out;
        cursor: grab;

        p {
            color: white;
            font-weight: bold;
            font-size: 1.5rem;
        }

        code {
            color: white;
            font-size: 1rem;
        }

        &:hover {
            opacity: 0.8;
        }
    }

    .color-swatch.copied {
        position: relative;
        cursor: grabbing;
        &::after {
            content: 'Copied!';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            font-family: monospace;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
        }
    }

    .logo {
        filter: drop-shadow(0 0 0.75rem rgba(0, 0, 0, 0.25));
        cursor: pointer;
        transition: scale 0.3s ease-in-out;
        &:hover {
            scale: 1.05;
        }
    }
</style>
